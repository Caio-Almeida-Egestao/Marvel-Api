<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             xmlns:local="clr-namespace:Marvel.Renders" 
             x:Class="Marvel.MainPage">

    <FlexLayout BackgroundColor="#E8121D" Direction="Column" >
        <Frame CornerRadius="5" BackgroundColor="Black" Margin="7,5" Padding="0" HeightRequest="45">
            <local:ExtenderEntry HeightRequest="35"   Margin="10,0" TextColor="White" FontSize="15" Style="{StaticResource BebasEntryStyle}" PlaceholderColor="White" Placeholder="Procure por um personagem"></local:ExtenderEntry>
        </Frame>
        <Label Text="Marvel" Style="{StaticResource BebasBoldLabelStyle}" FontSize="68" TextColor="White" ></Label>
    </FlexLayout>

</ContentPage>
